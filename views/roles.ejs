<h2>Lista de Roles</h2>
<a href="/roles/new" class="btn btn-primary">Agregar nuevo rol</a>

<table>
  <tr>
    <th>ID</th>
    <th>Nombre</th>
    <th>Acciones</th>
  </tr>
  <% roles.forEach(role => { %>
    <tr>
      <td><%= role.id %></td>
      <td><%= role.name %></td>
      <td>
        <a href="/roles/edit/<%= role.id %>">Editar</a>
        <form method="POST" action="/roles/delete/<%= role.id %>" style="display:inline;">
          <button type="submit">Eliminar</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
